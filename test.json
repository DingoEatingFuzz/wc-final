{
  "version": 8,
  "sources": {
    "nhd": {
      "type": "vector",
      "tiles": [
        "https://storage.googleapis.com/nhd-tiles/v6/{z}/{x}/{y}.pbf"
      ],
      "minzoom": 0,
      "maxzoom": 12
    }
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#0F2336"
      }
    },
    {
      "id": "flowlines",
      "type": "line",
      "source": "nhd",
      "source-layer": "flowline",
      "paint": {
        "line-color": "#0E2542",
        "line-width": {
          "property": "STREAMLEVEL",
          "default": 0.5,
          "stops": [
            [ 1, 4 ],
            [ 2, 3 ],
            [ 3, 2 ],
            [ 4, 1.5 ],
            [ 5, 1 ],
            [ 6, 0.5 ]
          ]
        }
      }
    },
    {
      "id": "waterbody",
      "type": "fill",
      "source": "nhd",
      "source-layer": "waterbody",
      "paint": {
        "fill-color": "#12294E"
      }
    }
  ]
}
